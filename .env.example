# AI 配置 (用于翻译和摘要)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# 内容源配置
ENABLE_DOMESTIC_SOURCES=true
ENABLE_INTERNATIONAL_SOURCES=true

# 抓取配置
CRAWL_INTERVAL=2000
MAX_ARTICLES_PER_SOURCE=10

# 翻译配置
ENABLE_TRANSLATION=true
TRANSLATION_TARGET_LANGUAGE=zh-CN

# 时尚品牌聚焦
FOCUS_BRANDS=Chanel,Dior,Hermès,Louis Vuitton,Givenchy,Balenciaga,Valentino,Fendi,Saint Laurent,Versace
